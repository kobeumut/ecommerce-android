<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.eteration.ecommerce.presentation.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/navigation_detail" />
    </fragment>



    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.eteration.ecommerce.presentation.ui.detail.ProductDetailFragment"
        android:label="Product Detail">
        <argument
            android:name="product"
            app:argType="com.eteration.ecommerce.domain.model.Product" />
    </fragment>

</navigation>